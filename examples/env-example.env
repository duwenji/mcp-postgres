# PostgreSQL MCP Server Configuration
# Copy this file to .env and update with your actual database credentials

# Required PostgreSQL Connection Settings
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=your_database_name
POSTGRES_USER=your_username
POSTGRES_PASSWORD=your_password_here

# Optional PostgreSQL Connection Settings
POSTGRES_SSL_MODE=prefer
POSTGRES_POOL_SIZE=5
POSTGRES_MAX_OVERFLOW=10
POSTGRES_CONNECT_TIMEOUT=30

# MCP Server Settings
MCP_LOG_LEVEL=INFO
MCP_DEBUG=false

# Development Settings (Optional)
# POSTGRES_SCHEMA=public
# POSTGRES_APPLICATION_NAME=mcp-postgres-server
