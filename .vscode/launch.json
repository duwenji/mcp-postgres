{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "MCP PostgreSQL Server Debug",
            "type": "debugpy",
            "request": "launch",
            "program": "uv",
            "args": ["run", "mcp_postgres_duwenji"],
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env",
            "justMyCode": false
        },
        {
            "name": "Run Tests with Debug",
            "type": "debugpy",
            "request": "launch",
            "program": "-m",
            "args": ["pytest", "test/", "-v"],
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env"
        }
    ]
}
