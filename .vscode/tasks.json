{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Install Dependencies",
            "type": "shell",
            "command": "uv",
            "args": [
                "sync",
                "--group",
                "dev"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Format Code (Black)",
            "type": "shell",
            "command": "uv",
            "args": [
                "run",
                "black",
                "src/",
                "test/"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Lint Code (Flake8)",
            "type": "shell",
            "command": "uv",
            "args": [
                "run",
                "flake8",
                "src/",
                "test/"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": "$flake8"
        },
        {
            "label": "Type Check (MyPy)",
            "type": "shell",
            "command": "uv",
            "args": [
                "run",
                "mypy",
                "src/"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": "$mypy"
        },
        {
            "label": "Security Scan (Bandit)",
            "type": "shell",
            "command": "uv",
            "args": [
                "run",
                "bandit",
                "-r",
                "src/"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "uv",
            "args": [
                "run",
                "pytest",
                "test/",
                "-v"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": "$pytest"
        },
        {
            "label": "Run Tests with Coverage",
            "type": "shell",
            "command": "uv",
            "args": [
                "run",
                "pytest",
                "test/",
                "--cov=src/mcp_postgres_duwenji",
                "--cov-report=html",
                "--cov-report=term"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": "$pytest"
        },
        {
            "label": "Build Package",
            "type": "shell",
            "command": "uv",
            "args": [
                "build"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Run MCP Server",
            "type": "shell",
            "command": "uv",
            "args": [
                "run",
                "mcp-postgres-duwenji"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Full Code Quality Check",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Format Code (Black)",
                "Lint Code (Flake8)",
                "Type Check (MyPy)",
                "Security Scan (Bandit)",
                "Run Tests with Coverage"
            ],
            "group": "build",
            "problemMatcher": []
        }
    ]
}
