# PostgreSQL MCP Server Configuration
# Copy this file to .env and update the values with your PostgreSQL connection details

# PostgreSQL Connection Settings
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=mcp-postgres-db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# PostgreSQL Connection Options
POSTGRES_SSL_MODE=prefer
POSTGRES_POOL_SIZE=5
POSTGRES_MAX_OVERFLOW=10
POSTGRES_CONNECT_TIMEOUT=30

# Docker Auto-Setup Settings
# Set MCP_DOCKER_AUTO_SETUP=true to automatically start PostgreSQL Docker container
MCP_DOCKER_AUTO_SETUP=false
MCP_DOCKER_IMAGE=postgres:16
MCP_DOCKER_CONTAINER_NAME=mcp-postgres-auto
MCP_DOCKER_PORT=5432
MCP_DOCKER_DATA_VOLUME=mcp_postgres_data
MCP_DOCKER_PASSWORD=postgres
MCP_DOCKER_DATABASE=postgres
MCP_DOCKER_USERNAME=postgres
MCP_DOCKER_MAX_WAIT_TIME=30

# MCP Server Settings
MCP_LOG_LEVEL=INFO
MCP_DEBUG=false
