# PostgreSQL MCP Server Environment Variables Example

# =============================================
# Docker Auto-Setup Configuration
# =============================================

# Enable Docker auto-setup (true/false)
MCP_DOCKER_AUTO_SETUP=true

# PostgreSQL Docker image
MCP_DOCKER_IMAGE=postgres:16

# Docker container name
MCP_DOCKER_CONTAINER_NAME=mcp-postgres-auto

# Host port mapping for PostgreSQL
MCP_DOCKER_PORT=5432

# Data volume name for persistent storage
MCP_DOCKER_DATA_VOLUME=mcp_postgres_data

# PostgreSQL credentials
MCP_DOCKER_PASSWORD=postgres
MCP_DOCKER_DATABASE=mcp-postgres-auto-db
MCP_DOCKER_USERNAME=postgres

# Maximum wait time for container startup (seconds)
MCP_DOCKER_MAX_WAIT_TIME=30

# =============================================
# Performance Monitoring Configuration
# =============================================

# Slow query threshold in milliseconds (default: 1000ms = 1 second)
MCP_SLOW_QUERY_THRESHOLD_MS=1000

# Enable auto_explain extension for query plan logging (true/false)
MCP_ENABLE_AUTO_EXPLAIN=true

# =============================================
# PostgreSQL Connection Configuration
# =============================================

# PostgreSQL connection settings
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=mcp-postgres-db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Connection pool settings
POSTGRES_POOL_SIZE=5
POSTGRES_MAX_OVERFLOW=10
POSTGRES_CONNECT_TIMEOUT=30

# Logging level (DEBUG, INFO, WARNING, ERROR)
MCP_LOG_LEVEL=INFO

# Enable protocol debug mode (true/false)
MCP_PROTOCOL_DEBUG=true

# Log directory path (empty for default)
MCP_LOG_DIR=C:\\Logs\\mcp-postgres
